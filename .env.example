# --- Main Environment Variables ---
# This file is read by docker-compose and also loaded into services.
# Copy this file to .env and fill in your actual values

# --- Security Settings ---
DJANGO_SECRET_KEY='your_VERY_strong_and_UNIQUE_production_secret_key_here' # Generate a new one
DJANGO_DEBUG=False # Must be False for production
DJANGO_ALLOWED_HOSTS='backend.yourdomain.com,dashboard.yourdomain.com,yourdomain.com,www.yourdomain.com,YOUR_SERVER_IP,127.0.0.1,localhost,0.0.0.0'
CSRF_TRUSTED_ORIGINS='http://YOUR_SERVER_IP,https://backend.yourdomain.com,https://dashboard.yourdomain.com,https://yourdomain.com,https://www.yourdomain.com'

# --- Database Settings ---
DB_ENGINE='django.db.backends.postgresql'
DB_NAME='whatsapp_crm_dev'
DB_USER='crm_user'
DB_PASSWORD='your_secure_database_password'
DB_HOST='db'
DB_PORT='5432'

# --- CORS Settings ---
CORS_ALLOWED_ORIGINS='https://dashboard.yourdomain.com,http://dashboard.yourdomain.com,https://yourdomain.com,https://www.yourdomain.com,http://localhost,http://YOUR_SERVER_IP,http://YOUR_SERVER_IP:3000,http://YOUR_SERVER_IP:5173,http://127.0.0.1:5173'
CORS_ALLOW_CREDENTIALS=True

# --- Redis Settings ---
REDIS_PASSWORD=your_secure_redis_password

# --- Celery Settings ---
# IMPORTANT: Replace 'your_secure_redis_password' with the actual REDIS_PASSWORD value above
CELERY_BROKER_URL='redis://:your_secure_redis_password@redis:6379/0'
CELERY_WORKER_CONCURRENCY=100

# --- JWT (JSON Web Token) Settings ---
JWT_ACCESS_TOKEN_LIFETIME_MINUTES='60'
JWT_REFRESH_TOKEN_LIFETIME_DAYS='7'

# --- Application-Specific Settings ---
CONVERSATION_EXPIRY_DAYS='60'
# WHATSAPP_APP_SECRET is now DEPRECATED - store app_secret in MetaAppConfig via Django Admin instead
# WHATSAPP_APP_SECRET='your_whatsapp_app_secret'

# --- Logging Settings (Optional - defaults are in settings.py) ---
# DJANGO_LOG_LEVEL='INFO'
# CELERY_LOG_LEVEL='INFO'

# --- External API Keys ---
API_FOOTBALL_KEY="your_api_football_key"
FOOTBALL_DATA_API_KEY="your_football_data_api_key"
THE_ODDS_API_KEY='your_odds_api_key'
